name: Flutter CI

# Run CI on pushes and pull requests to main or dev branches
on:
  push:
    branches: [main, dev]
  pull_request:
    branches: [main, dev]

jobs:
  flutter-ci:
    runs-on: ubuntu-latest

    steps:
      # 1️⃣ Checkout code
      - name: Checkout repository
        uses: actions/checkout@v4

      # 2️⃣ Setup Flutter
      - name: Setup Flutter
        uses: subosito/flutter-action@v2
        with:
          flutter-version: "3.13.6"  # change to your Flutter version
          channel: stable

      # 3️⃣ Flutter pub get
      - name: Get dependencies
        run: flutter pub get

      # 4️⃣ Run Dart format (optional, CI will fail if formatting wrong)
      - name: Dart format check
        run: flutter format --set-exit-if-changed .

      # 5️⃣ Run Flutter analyzer (linting)
      - name: Flutter analyze
        run: flutter analyze --fatal-infos

      # 6️⃣ Run Flutter tests
      - name: Run tests
        run: flutter test --coverage

      # 7️⃣ Upload coverage report (optional)
      - name: Upload coverage
        uses: actions/upload-artifact@v3
        with:
          name: coverage-report
          path: coverage/
